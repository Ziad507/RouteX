# ============================================================================
# DJANGO CORE SETTINGS
# ============================================================================

# Secret key for Django (REQUIRED in production)
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here

# Debug mode (True for development, False for production)
DEBUG=True

# ============================================================================
# CACHING CONFIGURATION
# ============================================================================

# Enable Redis caching (set to True to use Redis, False for local memory cache)
USE_REDIS=False

# Redis connection URL (only needed if USE_REDIS=True)
# Format: redis://[password@]host[:port][/database]
REDIS_URL=redis://127.0.0.1:6379/1

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Use SQLite for local development (set to True if PostgreSQL is not available)
# If True or DB_NAME is not set, SQLite will be used automatically
USE_SQLITE=True

# PostgreSQL settings (only needed if USE_SQLITE=False)
DB_NAME=routex
DB_USER=routex_user
DB_PASSWORD=your_database_password
DB_HOST=127.0.0.1
DB_PORT=5432

# ============================================================================
# CORS CONFIGURATION (Optional)
# ============================================================================

# Comma-separated list of allowed origins for CORS
# Example: CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
# Leave empty to use default development origins when DEBUG=True
CORS_ALLOWED_ORIGINS=

# ============================================================================
# SECURITY SETTINGS (Production only)
# ============================================================================

# Enable SSL redirect in production
SECURE_SSL_REDIRECT=True

# HSTS settings (HTTP Strict Transport Security)
SECURE_HSTS_SECONDS=31536000

# ============================================================================
# ERROR TRACKING (Sentry)
# ============================================================================

# Sentry DSN for error tracking (get from https://sentry.io)
# Leave empty to disable Sentry
SENTRY_DSN=

# Sentry release version (optional)
SENTRY_RELEASE=routex@1.0.0

# Sentry environment (production, staging, development)
SENTRY_ENVIRONMENT=production

# ============================================================================
# DATABASE CONNECTION POOLING
# ============================================================================

# Enable database connection pooling (recommended for production)
USE_DB_POOLING=False

# Maximum database connections in pool
DB_MAX_CONNS=20

# Minimum database connections in pool
DB_MIN_CONNS=5

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# Email backend (smtp, console, file)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@routex.com
SERVER_EMAIL=noreply@routex.com

# Admin email for error notifications
ADMIN_EMAIL=admin@routex.com

# ============================================================================
# OPTIONAL SETTINGS
# ============================================================================

# Additional configuration can be added here as needed

