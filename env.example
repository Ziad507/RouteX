# ============================================================================
# DJANGO CORE SETTINGS
# ============================================================================

# Secret key for Django (REQUIRED in production)
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here

# Debug mode (True for development, False for production)
DEBUG=True

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Use SQLite for local development (set to True if PostgreSQL is not available)
# If True or DB_NAME is not set, SQLite will be used automatically
USE_SQLITE=True

# PostgreSQL settings (only needed if USE_SQLITE=False)
DB_NAME=routex
DB_USER=routex_user
DB_PASSWORD=your_database_password
DB_HOST=127.0.0.1
DB_PORT=5432

# ============================================================================
# CORS CONFIGURATION (Optional)
# ============================================================================

# Comma-separated list of allowed origins for CORS
# Example: CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
# Leave empty to use default development origins when DEBUG=True
CORS_ALLOWED_ORIGINS=

# ============================================================================
# SECURITY SETTINGS (Production only)
# ============================================================================

# Enable SSL redirect in production
SECURE_SSL_REDIRECT=True

# HSTS settings (HTTP Strict Transport Security)
SECURE_HSTS_SECONDS=31536000

# ============================================================================
# OPTIONAL SETTINGS
# ============================================================================

# Additional configuration can be added here as needed

